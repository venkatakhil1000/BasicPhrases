<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/gridLayout" app:rowCount="4" app:columnCount="2" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

        <Button
                android:text="Good \nMorning!"
                android:textAlignment="center"
                app:layout_row="0" app:layout_column="0"
                android:id="@+id/button1"
                android:gravity="fill"
                android:tag="goodmorning"
                android:onClick="playPhrase"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>

        <Button
                android:text="Hi!\nBye!"
                android:textAlignment="center"
                app:layout_row="0" app:layout_column="1"
                android:id="@+id/button2"
                android:onClick="playPhrase"
                android:tag="hibye"
                android:gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>

        <Button
                android:text="Welcome"
                android:textAlignment="center"
                app:layout_row="1" app:layout_column="0"
                android:id="@+id/button3"
                android:onClick="playPhrase"
                android:tag="welcome"
                android:gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>

        <Button
                android:text="Good\nBye!"
                android:textAlignment="center"
                app:layout_row="1" app:layout_column="1"
                android:id="@+id/button4"
                android:onClick="playPhrase"
                android:tag="goodbye"
                android:gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>

        <Button
                android:text="Please"
                android:textAlignment="center"
                app:layout_row="2" app:layout_column="0"
                android:id="@+id/button5"
                android:onClick="playPhrase"
                android:tag="please"
                android:gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>

        <Button
                android:text="Thank\nYou"
                android:textAlignment="center"
                app:layout_row="2" app:layout_column="1"
                android:id="@+id/button6"
                android:onClick="playPhrase"
                android:tag="thankyou"
                android:gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>

        <Button
                android:text="I'm\nsorry"
                android:textAlignment="center"
                app:layout_row="3" app:layout_column="0"
                android:id="@+id/button7"
                android:onClick="playPhrase"
                android:tag="imsorry"
                android:gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>

        <Button
                android:text="Let's\nGo!"
                android:textAlignment="center"
                app:layout_row="3" app:layout_column="1"
                android:id="@+id/button8"
                android:onClick="playPhrase"
                android:tag="letsgo"
                android:gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1" tools:ignore="RtlCompat"/>


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>